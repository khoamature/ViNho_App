<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeRefreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F6F9"
    tools:context=".ui.fragments.TransactionFragment">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Header với màu Gradient (GIỮ NGUYÊN) -->
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_transaction_header"
            android:fitsSystemWindows="true">

            <!-- ... (Toàn bộ nội dung bên trong AppBarLayout giữ nguyên) ... -->
            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Search Bar -->
                    <EditText
                        android:id="@+id/etSearch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_search_bar"
                        android:drawableStart="@drawable/ic_3dot"
                        android:drawablePadding="12dp"
                        android:hint="Search transactions..."
                        android:padding="12dp"
                        android:textColorHint="@color/black"
                        android:textColor="@color/black" />

                    <!-- Filter Buttons - THAY ĐỔI HOÀN TOÀN -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btnFilter"
                            style="?attr/materialButtonOutlinedStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="Filters"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            app:iconTint="@color/white"
                            app:strokeColor="@color/white" />

                        <!-- Sử dụng LinearLayout thay cho ToggleGroup -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <!-- Thay thế các nút trong ToggleGroup bằng Button riêng lẻ -->
                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btnAll"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_marginEnd="8dp"
                                android:layout_weight="1"
                                android:background="@drawable/bg_filter_button_selected"
                                android:text="All"
                                android:textAllCaps="false"
                                android:textColor="@android:color/white"
                                android:textSize="12sp" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btnExpense"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:background="@drawable/bg_filter_button_unselected"
                                android:text="Expense"
                                android:textAllCaps="false"
                                android:textColor="@android:color/white"
                                android:textSize="12sp" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btnIncome"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_marginEnd="8dp"
                                android:layout_weight="1"
                                android:background="@drawable/bg_filter_button_unselected"
                                android:text="Income"
                                android:textAllCaps="false"
                                android:textColor="@android:color/white"
                                android:textSize="12sp" />

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewTransactions"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingBottom="16dp"
            android:paddingTop="56dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:listitem="@layout/item_transaction" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
